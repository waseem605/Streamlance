<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/bottom_sheet_custom"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="80dp"
                android:layout_marginTop="20dp"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How can we help?"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hk_grotesk_bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account to save your preference and jump start your practice"
            android:textColor="@color/white"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textSize="16sp"
            android:textAlignment="center" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/choose_service"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/orange"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottomsheet_extend"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Service"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:fontFamily="@font/hkgbold"
                    android:layout_marginLeft="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose a specific service when you know the problem"
                    android:textColor="@color/white"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    ></TextView>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/help_me_fix_car"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottomsheet_extend"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help me fix my car"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/hkgbold"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help me diagnose my vehicle and recieve quotes from mechanics"
                    android:textSize="14sp"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:layout_marginLeft="15dp"
                    ></TextView>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</RelativeLayout>