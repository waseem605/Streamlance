<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/silver"
    android:layout_height="match_parent"
    tools:context=".MainPage.ProvidersQuotes">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Provider Quotes"
        android:id="@+id/tabbar_pq"
        android:textColor="@color/black"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        app:titleMarginStart="120dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tabbar_pq"
        android:id="@+id/tabbar_p">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:rowCount="1"
            android:columnCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:background="@color/white"
                android:layout_marginEnd="1dp"
                android:layout_column="0">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_button_p"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:id="@+id/img1"
                        android:padding="3dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/msort_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img1"
                        android:textSize="18sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_row="0"
                android:layout_column="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter_link"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:id="@+id/img3"
                        android:padding="3dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/forma_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img3"
                        android:textSize="18sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:background="@color/white"
                android:layout_column="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_link_p"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:id="@+id/img2"
                        android:padding="3dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/group_59985" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAP"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img2"
                        android:textSize="18sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        />
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>


