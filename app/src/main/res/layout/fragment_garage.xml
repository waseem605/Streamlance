<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Garage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textColor="@color/black"
        android:text="My Vehicles"
        android:textSize="20sp"></TextView>

   <include layout="@layout/sample_cars"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/addmorevehicle">

        <Button
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:background="@drawable/ring"
            android:backgroundTint="@color/Back_color"
            android:text="+"
            android:textColor="@color/Back_color"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Add new vehicle"
            android:textColor="@color/Back_color"
            android:textSize="16sp"></TextView>
    </LinearLayout>
<Button
android:layout_width="50dp"
android:layout_height="50dp"
android:background="@drawable/circle_button"
android:backgroundTint="@color/Back_color"
android:text="+"
android:layout_marginLeft="280dp"
    android:layout_marginTop="280dp"
android:textSize="20sp"
android:textColor="@color/white"
    android:id="@+id/addvehicle"></Button>

    </LinearLayout>
