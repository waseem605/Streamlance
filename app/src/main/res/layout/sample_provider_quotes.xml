<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sampleproviderquotes"
    android:background="@color/silver">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="10dp"
            android:id="@+id/picture_pq"
            android:src="@drawable/__import_image" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/star"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/star"
                android:layout_marginLeft="10dp"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:text="4.8"
                android:textSize="20sp"></TextView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/pin"
                    android:layout_marginLeft="10dp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/hk_grotesk_medium"
                    android:textColor="@color/black"
                    android:text="2.6km"
                    android:textSize="20sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rounded_white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/dollar_symbol"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_medium"
                    android:text="$776.61"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gresasy Albo Auto Repair"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"></TextView>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/___color"></Button>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:text="Monday, 10 Nov 2017 at 10:00 AM to 12:00 PM"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textColor="@color/black"
            android:text="145 valencia st.san Fransisco 0.2km"
            android:layout_marginLeft="10dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/loanercar"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/carr"
                    android:layout_marginLeft="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loaner Car"
                    android:layout_toEndOf="@id/loanercar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@id/tvShuttle"
                    android:src="@drawable/truck"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shuttle Service"
                    android:id="@+id/tvShuttle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/pickup"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tow_truck"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tow pick-up"
                    android:layout_toEndOf="@id/pickup"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/hk_grotesk_semi_bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@id/mecahnic"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/delivery_truck"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Mechanic"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/mecahnic"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/carr"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car delivery"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:text="Chat"
                android:layout_marginEnd="10dp"
                android:padding="18dp"
                android:layout_toLeftOf="@id/view"
                android:id="@+id/chat_btn"
                android:textColor="@color/white"
                ></Button>
            <View
                android:id="@+id/view"
                android:layout_height="1dp"
                android:layout_width="0dp"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:text="View Quotes"
                android:padding="18dp"
                android:layout_toRightOf="@id/view"
                android:id="@+id/viewquotes"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                ></Button>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>