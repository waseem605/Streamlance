<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/bottomsheet"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tabtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textSize="16sp"
                android:textColor="#FFA500"></TextView>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/time"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:fontFamily="@font/hk_grotesk_regular"
                android:hint="DD/MM/YYYY"
                android:inputType="date"
                android:text="02/06/2021"
                android:textColor="@color/black"
                android:textSize="10dp"></TextView>
            <TextClock
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="00:00 am"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:inputType="time"
                android:focusable="false"
                android:textSize="10dp"/>
        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/sample_cars"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:fontFamily="@font/hk_grotesk_medium"
            android:text="Suggested Services"
            android:id="@+id/suggested"
            android:textSize="18sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="Oil and Filter Services"
                android:textSize="14sp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="-"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="Engine Oil"
                android:textSize="14sp"></TextView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textColor="@color/black"
            android:background="@drawable/rounded_white"
            android:text="Smoke Services"
            android:textSize="14sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/white_background_b_round"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textSize="14sp"
                        android:id="@+id/price"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Price"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textSize="14sp"
                        android:layout_below="@id/price"
                        android:textColor="@color/black"
                        android:text="$22.58"
                        android:textStyle="bold"/>
                    <Button
                        android:layout_width="150dp"
                        android:id="@+id/btnbooking"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:fontFamily="@font/hk_grotesk_medium"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"></Button>
                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>