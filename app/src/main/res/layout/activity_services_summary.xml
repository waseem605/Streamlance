<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.Services_Summary"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/back_arrow_ss"
                android:src="@drawable/left_arrow"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/service_summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans_bold" />

        <include
            layout="@layout/sample_cars"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/services_requested" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:text="@string/oil_and_filter_servicess" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:paddingStart="20dp"
                android:text="@string/brake_service_S" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:onClick="cllAddionalServicesS"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_background_b_round">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ring"
                    android:backgroundTint="@color/orange"
                    android:text="+"
                    android:textColor="@color/orange"></Button>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/add_additional_service" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:paddingStart="20dp"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/location_ss" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:paddingEnd="30dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:paddingStart="20dp"
                android:text="@string/location_addres_tem" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_background_b_round">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/pen_icon"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/change_location" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/note" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingBottom="10dp"
                android:background="@drawable/white_background_b_round">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@drawable/style_cursur"
                    android:hint="Describe your special requirements "
                    android:paddingBottom="40dp"
                    android:background="@drawable/white_backgroun_with_border">

                </EditText>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white_contras"
                android:text="@string/preferred_date_range" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/datePic_layout"
                android:layout_marginTop="2dp"
                android:padding="15dp"
                android:background="@color/white_contras">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/date_picker_btn"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/date_range_24"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_date_tx"
                    android:text="March 21 - march 27"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/white_contras"
                android:background="@drawable/white_background_b_round">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/preferred_hours" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/prefer_hours"
                    android:padding="10dp"
                    android:hapticFeedbackEnabled="true"
                    android:dropDownSelector="@color/orange"
                    android:id="@+id/select_hours_range">

                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/continue_Btn"
            android:onClick="callQuotasubmited"
            android:textAllCaps="false"
            android:padding="18dp"
            android:background="@drawable/rounded"
            android:layout_margin="10dp"
            android:text="@string/request_quote"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>