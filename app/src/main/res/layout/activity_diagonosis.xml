<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/diagonos_layout"

    tools:context=".FlowTwo.Diagonosis">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diagonos_layout_mini"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/back_arrow_diag"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="How can we help?"
                android:gravity="center"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </androidx.appcompat.widget.Toolbar>


        <include layout="@layout/sample_cars"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/bottomsheet"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What's happening to your car?"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_b_round">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    android:textCursorDrawable="@drawable/style_cursur"
                    android:hint="Describe your problem"
                    android:padding="5dp"
                    android:background="@drawable/round_border">

                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose the Service (optional)"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Car is not starting"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/next_icon"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="I need a pre-purchase inspection"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/next_icon"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Check engine light Is on"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/next_icon"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/addition_service_lt"
                android:onClick="cllAddionalServices"
                android:paddingStart="15dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_background_b_round">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ring"
                    android:backgroundTint="@color/orange"
                    android:text="+"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/add_additional_service" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_btn_D"
            android:textAllCaps="false"
            android:background="@drawable/rounded"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:padding="18dp"
            android:text="Request Diagnosis"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="19sp"
            android:textColor="@color/white" />
    </LinearLayout>


    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hk_grotesk_regular"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:itemIconSize="24sp"
        app:itemIconTint="@color/bottom_navigation_style"
        app:itemRippleColor="@color/Back_color"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/bottom_navigation_style"
        android:layout_centerHorizontal="true"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>