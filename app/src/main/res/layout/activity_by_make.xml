<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage.ByMake">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_vehicle_s_make"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black">
        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/style_spinner"
            android:id="@+id/spinner_car_name"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_vehicle_s_make"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black">
        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/style_spinner"
            android:id="@+id/spinner_car_year"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_vehicle_s_make"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black">
        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/style_spinner"
            android:id="@+id/vehical_model"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_your_vehicle_s_trim"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black">
        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/style_spinner"
            android:id="@+id/vehical_trim"></Spinner>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Vehicle"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded"
        android:textColor="@color/white"
        android:padding="20dp"></Button>




</LinearLayout>