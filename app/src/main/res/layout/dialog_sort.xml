<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/white_round_background"
    android:layout_marginTop="150dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textColor="@color/black"
            android:text="By rating ( Low to High )" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/sort_checkbox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textColor="@color/black"
            android:text="By rating ( High to Low )" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/sort_checkbox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textColor="@color/black"
            android:text="By Price ( Low to High )" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/sort_checkbox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textColor="@color/black"
            android:text="By Price ( High to Low )" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/sort_checkbox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textColor="@color/black"
            android:text="By Distance" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/sort_checkbox"
            />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ok_button_dialog"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Sort"></Button>



</LinearLayout>