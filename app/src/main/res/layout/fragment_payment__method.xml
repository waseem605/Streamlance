<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Payments.Payment_Method"
    android:id="@+id/paymentmethoddialog"
    android:background="@drawable/bottom_sheet_custom"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="5dp"
        android:layout_marginLeft="160dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your payment methods"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textAlignment="center"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="3dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/searchbar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cardpic"
            android:id="@+id/cardpic"></ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="14sp"
            android:layout_toEndOf="@id/cardpic"
            android:hint="399-1234-5678-0000"
            ></EditText>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/checked"></ImageView>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/searchbar"
                android:fontFamily="@font/dm_sans_regular"
                android:hint="MM/YY"
                android:padding="15dp"
                android:textSize="14sp"></EditText>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/searchbar"
                android:fontFamily="@font/dm_sans_regular"
                android:hint="CVC"
                android:padding="15dp"
                android:textSize="14sp"></EditText>
        </RelativeLayout>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/orange"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="Add Card"
        android:id="@+id/addcard"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="14sp">
    </Button>
   <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
    android:textColor="@color/Back_color"
    android:text="Scan Card"
    android:fontFamily="@font/dm_sans_bold"
    android:textSize="14sp">
</Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</RelativeLayout>