<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/Back_color">

        <ImageView
            android:id="@+id/profile_user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="226dp"
            android:src="@drawable/profileavatar" />
        <TextView
            android:id="@+id/name_user_tx"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/hk_grotesk_medium"
            android:layout_marginStart="120dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="15dp"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email_user_tx"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/hk_grotesk_medium"
            android:layout_marginStart="120dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            android:text="@string/userprofile_email"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_profile_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:fontFamily="@font/hk_grotesk_medium"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="16dp"
            android:text="edit Profile"
            android:textColor="#dbd7d7"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout_first"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/white_round_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/call_withbackground_icon" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/message_link"
                android:id="@+id/messagetx"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paymentmethod"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/payment_icon" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/payment_method"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_icon_blue" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/profile"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/layout_first"
        android:paddingBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_round_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/about_steamlan" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:text="@string/about_streamlan"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/help_icon" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:text="@string/help_support"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/privacy_icon" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/privacy_policy"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>