<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".Services.BookNowSummary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/back_arrow_QS"
                    android:layout_margin="15dp"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quote Summary"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"/>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white">

            <include layout="@layout/sample_cars" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bottomsheet"
            android:backgroundTint="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Note"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:layout_marginLeft="10dp"
                android:textSize="12sp"></TextView>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Requested"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_toLeftOf="@id/parts"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="70dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:text="Labors"
                android:textSize="14sp"></TextView>
            <TextView
                android:id="@+id/parts"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Parts"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:textSize="14sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="Oil and Filter Service"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:text="$141.0"
                android:layout_toLeftOf="@id/parts1"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/parts1"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="$141.0"
                android:textSize="13sp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="Oil and Filter Service"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:text="$141.0"
                android:layout_toLeftOf="@id/parts2"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/parts2"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="$141.0"
                android:textSize="13sp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="Oil and Filter Service"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:text="$141.0"
                android:layout_toLeftOf="@id/parts3"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/parts3"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="$141.0"
                android:textSize="13sp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_background_b_round"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="Oil and Filter Service"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:text="$141.0"
                android:layout_toLeftOf="@id/parts4"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/parts4"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"
                android:text="$141.0"
                android:textSize="13sp"></TextView>

        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/style_cursur"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="18sp"
            android:hint="Promo Code"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp">
            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="$464.0"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp">
            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="VAT (10%)"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="$464.0"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp">
            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="$464.0"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"></TextView>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requestquote"
            android:layout_margin="20dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:text="Schedule Service"
            android:textAllCaps="false"
            android:padding="15dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </LinearLayout>



</ScrollView>