<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/diagnosisreviewandpay"
    android:background="@drawable/bottom_sheet_custom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FlowTwo.Diagnosis_Review_Pay"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="160dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="18dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/searchbar"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="18sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:gravity="center"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Diagnosis Fee"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="130dp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="VAT (10%)"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="130dp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="130dp"></TextView>
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Payment \n Method"
        android:textSize="29sp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="40dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Back_color"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/addcreditcard"
                android:layout_marginLeft="5dp"
                android:src="@drawable/creditcard"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Credit Card"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
               app:tint="@color/white"
                android:src="@drawable/paypal"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paypal"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2sp"
                android:textSize="13sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/white"
                android:src="@drawable/applepay"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple pay"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearreviewandpay"
        android:background="@drawable/rounded_white"
        android:backgroundTint="@color/orange"
        android:layout_margin="20dp"
        android:padding="18dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/secured_lock"
            app:tint="@color/white"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="60dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm and pay"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>



</LinearLayout>