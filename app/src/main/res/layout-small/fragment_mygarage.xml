<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.mygarage">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:src="@drawable/group_60057" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       android:layout_marginStart="75dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/hk_grotesk_bold"
        android:text="No Vehicles added"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hk_grotesk_regular"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Please add a Vehicle to get Started"
        />

    <Button
        android:id="@+id/add_vehicle"
        android:background="@drawable/rounded"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:layout_height="wrap_content"
       android:layout_marginStart="85dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Add Vehicle" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addvehicle"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/Back_color"
        android:text="+"
        android:layout_marginStart="270dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="@color/white"></Button>


</LinearLayout>