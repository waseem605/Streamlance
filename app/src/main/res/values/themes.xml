<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Streamlance" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/hk_grotesk_semi_bold</item>
    </style>
    <style name="CustomTabTextnotification" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/hkgbold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_custom</item>
    </style>



<!-- RangeSlider Style-->
    <style name="Myslider" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/teal_200</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="Widget.MaterialComponents.Slider">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/Back_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/unfilled_stars</item>

    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendar.HeaderLayout1</item>
        <!-- selected-->
        <item name="materialCalendarMonth">@style/MaterialComponents.day</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Dialog1</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Dialog1</item>
    </style>
    <style name="MaterialCalendar.HeaderLayout1" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <item name="android:background">@color/Back_color</item>
    </style>
    <style name="MaterialComponents.day" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:elegantTextHeight" tools:ignore="NewApi">@color/Back_color</item>
        <item name="android:textColorHighlight">@color/orange</item>
        <item name="android:calendarTextColor" tools:ignore="NewApi">@color/Back_color</item>
        <item name="activeColor">@color/Back_color</item>
        <item name="android:selectableItemBackground">@color/Back_color</item>
        <item name="strokeColor">@color/Back_color</item>
        <item name="android:colorBackground">@color/Back_color</item>
        <item name="android:color">@color/Back_color</item>
        <item name="tabIndicatorColor">@color/Back_color</item>

    </style>
    <style name="TextButton.Dialog1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/Back_color</item>
        <item name="backgroundTint">@color/Blue</item>
    </style>




</resources>