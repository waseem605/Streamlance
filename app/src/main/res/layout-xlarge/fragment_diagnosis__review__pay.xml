<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/diagnosisreviewandpay"
    android:background="@drawable/bottom_sheet_custom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FlowTwo.Diagnosis_Review_Pay"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <View
        android:layout_width="80dp"
        android:layout_marginTop="20dp"
        android:layout_height="10dp"
        android:padding="20dp"
        android:layout_marginLeft="320dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/searchbar"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:gravity="center"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Diagnosis Fee"
                android:textSize="28sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="230dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="VAT (10%)"
                android:textSize="28sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="230dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textSize="28sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="$200"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="230dp"></TextView>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Select your Payment Method"
        android:textSize="42sp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="160dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Back_color"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/addcreditcard"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="5dp"
                android:src="@drawable/creditcard"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Credit Card"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/white"
                android:src="@drawable/paypal"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paypal"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="23sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/white"
                android:src="@drawable/applepay"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple pay"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="23sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearreviewandpay"
        android:background="@drawable/rounded_white"
        android:backgroundTint="@color/orange"
        android:layout_margin="40dp"
        android:padding="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/secured_lock"
            app:tint="@color/white"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="140dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm and pay"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>



</LinearLayout>