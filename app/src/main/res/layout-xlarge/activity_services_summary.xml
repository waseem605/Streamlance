<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.Services_Summary"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/service_summary"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans_bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_white"
            android:orientation="horizontal"
            android:id="@+id/samplecar">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:src="@drawable/car"
                app:civ_border_color="#FF000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/carname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="BMW x5"
                    android:textSize="34sp"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chesisno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:text="67jhgfb57ndf " />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:paddingStart="20dp"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/services_requested"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:text="@string/oil_and_filter_servicess"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:paddingStart="20dp"
                android:text="@string/brake_service_S"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:onClick="cllAddionalServicesS"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_background_b_round">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ring"
                    android:backgroundTint="@color/orange"
                    android:text="+"
                    android:textColor="@color/orange"></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/add_additional_service"></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:paddingStart="20dp"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/location_ss"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="10dp"
                android:paddingEnd="30dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:paddingStart="20dp"
                android:text="@string/location_addres_tem"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_background_b_round">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pen_icon"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/orange"></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/change_location"></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/note"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingBottom="10dp"
                android:background="@drawable/white_background_b_round">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:hint="Describe your special requirements"
                    android:paddingBottom="40dp"
                    android:background="@drawable/white_backgroun_with_border">

                </EditText>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:padding="10dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:background="@drawable/bottomsheet"
                android:backgroundTint="@color/white"
                android:text="@string/preferred_date_range"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/datePic_layout"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:background="@color/white">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/date_range_24"
                    android:padding="5dp"></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_date_tx"
                    android:text="March 21"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="26sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_date_tx"
                    android:text="March 21"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_background_b_round">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/hk_grotesk_semi_bold"
                    android:text="@string/preferred_hours"></TextView>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbarSize="26sp"
                    android:padding="10dp"
                    android:entries="@array/prefer_hours"
                    android:id="@+id/select_hours_range">

                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/continue_Btn"
            android:onClick="callQuotasubmited"
            android:textAllCaps="false"
            android:padding="15dp"
            android:background="@drawable/rounded"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/request_quote"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="32sp"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</ScrollView>