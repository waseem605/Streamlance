<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/request_submitted_diagonos"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/white_round_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/hk_grotesk_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Request Submitted"
            android:textSize="45sp" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/request_diagnosis_desc"
            android:textSize="32sp" />

        <Button
            android:id="@+id/view_diagonos_quota_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:text="@string/view_diagnosis_quotes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>