<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Payments.Payment_Method"
    android:id="@+id/paymentmethoddialog"
    android:background="@drawable/bottom_sheet_custom"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="80dp"
        android:layout_marginTop="30dp"
        android:layout_height="10dp"
        android:layout_marginLeft="320dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your payment methods"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textAlignment="center"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/searchbar">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cardpic"
            android:id="@+id/cardpic"></ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardpic"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="28sp"
            android:gravity="center"
            android:hint="399-1234-5678-0000"
            ></EditText>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/checked"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/searchbar"
            android:hint="MM/YY"
            android:textSize="24sp"
            android:fontFamily="@font/dm_sans_regular"
            android:layout_alignParentLeft="true"></EditText>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/searchbar"
            android:hint="CVC"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="26sp"></EditText>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/orange"
        android:layout_margin="20dp"
        android:padding="30dp"
        android:textColor="@color/white"
        android:text="Add Card"
        android:id="@+id/addcard"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="30sp">
    </Button>
   <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:padding="30dp"
    android:textColor="@color/Back_color"
    android:text="Scan Card"
    android:fontFamily="@font/dm_sans_bold"
    android:textSize="30sp">
</Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</RelativeLayout>