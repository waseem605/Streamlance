<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GarageFragments.ServicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <include layout="@layout/sample_services" />
            <include layout="@layout/sample_services" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/star_rate_24"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4.85"
                android:layout_marginTop="10dp"
                android:textSize="29sp"
                android:fontFamily="@font/hk_grotesk_medium"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(215 reviews)"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:textSize="29sp"
                android:fontFamily="@font/hk_grotesk_regular"></TextView>


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/book_services"
                android:background="@drawable/rounded"
                android:paddingStart="50dp"
                android:paddingEnd="30dp"
                android:layout_marginStart="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:padding="20dp"
                ></Button>
        </LinearLayout>
    </LinearLayout>


</ScrollView>