<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/Back_color">

        <ImageView
            android:id="@+id/profile_user_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/profileavatar" />

        <TextView
            android:id="@+id/name_user_tx"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="130dp"
            android:layout_toEndOf="@+id/profile_user_img"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/email_user_tx"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/profile_user_img"
            android:text="@string/userprofile_email"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/edit_profile_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/profile_user_img"
            android:text="edit Profile"
            android:textColor="#dbd7d7"
            android:textSize="36sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="20dp"
        android:padding="30dp"
        android:background="@drawable/white_round_background_large"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/call_withbackground_icon" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/message_link"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/payment_icon" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/payment_method"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_icon_blue" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="770dp"
        android:layout_marginEnd="20dp"
        android:padding="30dp"
        android:background="@drawable/white_round_background_large"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/about_steamlan" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/about_streamlan"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/help_icon" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/help_support"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/privacy_icon" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/privacy_policy"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="42sp"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/next_icon"></ImageView>
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>