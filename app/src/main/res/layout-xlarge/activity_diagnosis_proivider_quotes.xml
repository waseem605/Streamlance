<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FlowTwo.Diagnosis_Proivider_Quotes">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Quotes"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="36sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:gravity="center"
            app:titleMarginStart="250dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@color/gray">
        <Button
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:id="@+id/sort_button"
            android:layout_marginTop="5dp"
            android:textSize="24sp"
            android:onClick="callSortdata"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:background="@color/white"
            android:text="SORT"></Button>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:src="@drawable/forma_1"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:textSize="26sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:background="@color/white"
                android:text="Filters"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:padding="10dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/group_59985"
                android:layout_margin="15dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textSize="26sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:background="@color/white"
                android:text="Map"></TextView>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/sample_provider_quotes" />
    </ScrollView>


</LinearLayout>