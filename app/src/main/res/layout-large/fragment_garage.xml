<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Garage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="My Vehicles"
        android:id="@+id/myvehicl"
        android:textSize="40sp"></TextView>

    <include layout="@layout/sample_cars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/samplecar"
        android:layout_below="@id/myvehicl"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/addmorevehicle"
        android:layout_below="@id/samplecar">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:background="@drawable/ring"
            android:backgroundTint="@color/Back_color"
            android:text="+"
            android:textColor="@color/Back_color"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Add new vehicle"
            android:layout_marginTop="5dp"
            android:textColor="@color/Back_color"
            android:textSize="26sp"></TextView>
    </LinearLayout>

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <Button
        android:id="@+id/addvehicle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/Back_color"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="40sp"></Button>
</RelativeLayout>
