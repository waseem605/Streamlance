<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paymentdiagnosis"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_custom"
    tools:context=".FlowTwo.Payment_Diagnosis"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <View
        android:layout_width="80dp"
        android:layout_marginTop="30dp"
        android:layout_height="10dp"
        android:layout_marginLeft="320dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your payment methods"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textAlignment="center"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="6dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/searchbar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cardpic"
            android:id="@id/cardpic"
            android:layout_alignParentLeft="true"></ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="24sp"
            android:layout_toEndOf="@id/cardpic"
            android:gravity="center"
            android:hint="399-1234-5678-0000"
            ></EditText>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/checked"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/searchbar"
            android:layout_alignParentLeft="true"
            android:hint="MM/YY"
            android:textSize="24sp"
            android:fontFamily="@font/dm_sans_regular"
            android:id="@+id/etcvc"></EditText>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_toEndOf="@id/etcvc"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/searchbar"
            android:hint="CVC"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="24sp"></EditText>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="30dp"
        android:textColor="@color/white"
        android:text="Add Card"
        android:id="@+id/addcard"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="24sp">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>


</LinearLayout>
</RelativeLayout>