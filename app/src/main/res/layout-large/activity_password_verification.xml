<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.PasswordVerification">

    <ImageView
        android:id="@+id/logo_black"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:foregroundGravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/logo_blue" />

    <TextView
        android:id="@+id/choose_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:text="@string/choose_verification"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/send_sms_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_verify"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:background="@drawable/rounded"
        android:text="@string/send_sms"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="32sp" />
    <Button
        android:id="@+id/send_email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_sms_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded"
        android:text="@string/send_email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_email_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/hk_grotesk_regular"
        android:textSize="30sp"
        android:textColor="@color/Back_color"
        android:text="@string/go_back"
        android:textAlignment="center" />




</RelativeLayout>